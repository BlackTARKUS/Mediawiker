            - match: '(?=^\s*\||^\s*!|\|\||!!|\|\-|\|\})'
              pop: true
            - include: inline
            - match: '([^\s])(=["'']?)'
              captures:
                1: entity.other.attributes.table.cellcontents.cell-html.validhtml.mediawiki
