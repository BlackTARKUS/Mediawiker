  block:
    - match: ^\s*(?i)(#redirect)
      captures:
        1: keyword.control.redirect.mediawiki
      push:
        - meta_scope: meta.redirect.mediawiki
        - match: \n
          pop: true
        - include: link
    - match: " ?(<)(uml)(>)"
      captures:
        1: meta.tag.validhtml.mediawiki
        2: entity.name.tag.source.mediawiki
        3: meta.tag.validhtml.mediawiki
      push:
        - meta_content_scope: meta.tag.source.mediawiki
        - match: " ?(</)(uml)(>)"
          captures:
            1: meta.tag.validhtml.mediawiki
            2: entity.name.tag.source.mediawiki
            3: meta.tag.validhtml.mediawiki
          pop: true
    - match: '^(={1})(?!=)([^=]+)(={1})(?!=)\s*$'
      captures:
        1: markup.heading.tag.mediawiki
        2: markup.heading.1.mediawiki
        3: markup.heading.tag.mediawiki
      push:
          - include: inline
          - match: ""
            pop: true
